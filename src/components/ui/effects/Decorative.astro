---
/**
 * Decorative Background Effects Component
 * 
 * Unified component for decorative lines, corners, and background effects
 * Used across different page layouts for visual consistency
 * 
 * @prop {string} variant - The style variant to apply
 *   - 'blog-index': For blog listing page (inner lines + edge + horizontal top)
 *   - 'blog-post': For individual blog post page (primary/secondary lines + corners)
 *   - 'simple': Basic vertical and horizontal lines (default)
 */

interface Props {
  variant?: 'blog-index' | 'blog-post' | 'simple'
}

const { variant = 'simple' } = Astro.props
---

<!-- ========== BLOG INDEX VARIANT ========== -->
{variant === 'blog-index' && (
  <>
    <!-- Inner Vertical Lines -->
    <div class="absolute top-0 hidden h-full w-px lg:block bg-linear-to-b left-110 from-transparent via-gray-600 to-transparent opacity-50"></div>
    <div class="absolute top-0 hidden h-full w-px lg:block bg-linear-to-b right-110 from-transparent via-gray-600 to-transparent opacity-50"></div>
    
    <!-- Left Edge Line -->
    <div class="fixed left-0 top-0 h-full w-px bg-linear-to-b from-gray-800 via-gray-700 to-transparent opacity-30"></div>
    
    <!-- Top Horizontal Line -->
    <div class="fixed left-0 top-0 h-px w-full bg-linear-to-r from-transparent via-gray-800 to-transparent"></div>
  </>
)}

<!-- ========== BLOG POST VARIANT ========== -->
{variant === 'blog-post' && (
  <>
    <!-- Primary Vertical Lines -->
    <div class="absolute top-0 hidden h-full w-px lg:block bg-linear-to-b left-0 from-gray-800 via-gray-700 to-transparent"></div>
    <div class="absolute top-0 hidden h-full w-px lg:block bg-linear-to-b right-0 from-gray-800 via-gray-700 to-transparent"></div>
    
    <!-- Secondary Vertical Lines -->
    <div class="absolute top-0 hidden h-full w-px lg:block bg-linear-to-b left-20 from-transparent via-gray-800 to-transparent opacity-50"></div>
    <div class="absolute top-0 hidden h-full w-px lg:block bg-linear-to-b right-20 from-transparent via-gray-800 to-transparent opacity-50"></div>
    
    <!-- Corner Decorations -->
    <div class="absolute h-16 w-16 border-gray-800 opacity-60 left-0 top-0 border-l-2 border-t-2"></div>
    <div class="absolute h-16 w-16 border-gray-800 opacity-60 right-0 top-0 border-r-2 border-t-2"></div>
    <div class="absolute h-16 w-16 border-gray-800 opacity-60 bottom-0 left-0 border-b-2 border-l-2"></div>
    <div class="absolute h-16 w-16 border-gray-800 opacity-60 bottom-0 right-0 border-b-2 border-r-2"></div>
  </>
)}

<!-- ========== SIMPLE VARIANT (DEFAULT) ========== -->
{variant === 'simple' && (
  <>
    <!-- Basic Vertical Lines -->
    <div class="fixed top-0 left-0 h-full w-px bg-linear-to-b from-gray-800 via-gray-700 to-transparent opacity-30"></div>
    <div class="fixed top-0 right-0 h-full w-px bg-linear-to-b from-gray-800 via-gray-700 to-transparent opacity-30"></div>
    
    <!-- Top Horizontal Line -->
    <div class="fixed top-0 left-0 h-px w-full bg-linear-to-r from-transparent via-gray-800 to-transparent"></div>
  </>
)}
