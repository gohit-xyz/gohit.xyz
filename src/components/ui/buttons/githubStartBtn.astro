---
import { GitHubIcon } from '../../icons/social-media/github'
---

<body>
  <a
    href="https://github.com/gohit-xyz/linux.gohit.xyz"
    target="_blank"
    rel="noopener noreferrer"
    class="github-link"
  >
    <!-- <GitHubIcon client:load className="github-icon" /> -->
    <div class="github-icon">
      <svg viewBox="0 0 16 16">
        <path
          d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
        ></path>
      </svg>
    </div>
    <span class="stars-count">0</span>
  </a>
</body>

<style>
  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: inherit;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .github-link:hover {
    opacity: 0.7;
  }

  .github-icon {
    width: 20px;
    height: 20px;
  }

  .github-icon svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  .stars-count {
    font-size: 14px;
  }
</style>

<script>
  async function fetchGitHubStars() {
    const starsElement = document.querySelector('.stars-count')

    if (!starsElement) return

    try {
      const response = await fetch('https://api.github.com/repos/bastndev/Lynxjs-Pack')
      const data = await response.json()
      starsElement.textContent = String(data.stargazers_count || 0)
    } catch (error) {
      console.error('Error fetching GitHub stars:', error)
      starsElement.textContent = '0'
    }
  }

  fetchGitHubStars()
</script>
