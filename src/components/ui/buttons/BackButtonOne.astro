---
import { ArrowLeftIcon } from '@/components/icons/icons'

interface Props {
  href?: string
  text?: string
  ariaLabel?: string
  className?: string
}

const { 
  href = '/', 
  text = 'Back',
  ariaLabel = 'Go back to home',
  className = ''
} = Astro.props
---

<div class={`mb-8 flex items-center gap-4 ${className}`}>
  <a
    href={href}
    aria-label={ariaLabel}
    class="group flex items-center gap-2 text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-500"
  >
    <ArrowLeftIcon className="h-5 w-5 transition-transform group-hover:-translate-x-1" />
    <span class="text-sm">{text}</span>
  </a>
</div>