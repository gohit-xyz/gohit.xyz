---
import { extensions } from '@/data/extensions'
---

<article class="work-grid pt-6">
  {
    extensions.map((ext) => (
      <a
        class="work-card"
        href={ext.href}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={`${ext.name} â€” VS Code Marketplace`}
      >
        <img src={ext.imgSrc} alt={ext.alt} class="work-icon" />
        <span>{ext.name}</span>
      </a>
    ))
  }
</article>

<style>
  @reference "tailwindcss";
  span {
    font-family: 'IBM Plex Mono', monospace;
  }
  /* Work Grid */
  .work-grid {
    @apply grid w-full grid-cols-2 gap-3;
    animation: fadeIn 1s ease-in;
  }

  @media (max-width: 640px) {
    .work-grid {
      @apply grid-cols-1;
    }
  }

  .work-card {
    position: relative;
    display: flex;
    cursor: pointer;
    align-items: center;
    gap: 1.75rem;
    overflow: hidden;
    border-radius: 0.75rem;
    background-color: var(--bg-card);
    padding: 1rem;
    text-align: left;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.025em;
    color: var(--text-primary);
    text-decoration: none;
    box-shadow: 
      0 1px 3px 0 var(--shadow-card),
      0 0 0 1px var(--border-card);
    transition: all 0.5s ease-in-out;
  }

  .work-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
      rgba(99, 102, 241, 0.08),
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

html.dark .work-card::before {
  background: radial-gradient(
    circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
    rgba(34, 139, 34, 0.15),
    transparent 60%
  );
}  .work-card:hover::before {
    opacity: 1;
  }

  .work-card:hover {
    transform: translateY(-2px);
    background-color: var(--bg-card-hover);
    box-shadow: 
      0 10px 25px -5px var(--shadow-card),
      0 0 0 1px var(--border-card);
  }

html.dark .work-card:hover {
  box-shadow: 
    0 10px 25px -5px rgba(0, 0, 0, 0.5),
    0 0 0 1px rgba(34, 139, 34, 0.3);
}  .work-icon {
    height: 2.5rem;
    width: 2.5rem;
    min-width: 2.5rem;
    flex-shrink: 0;
    border-radius: 0.375rem;
    background-color: rgba(255, 255, 255, 0.5);
    object-fit: contain;
    padding: 0.125rem;
    transition: all 0.5s ease-in-out;
  }

  html.dark .work-icon {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .work-card:hover .work-icon {
    transform: scale(1.1) rotate(5deg);
    filter: brightness(1.1);
  }

html.dark .work-card:hover .work-icon {
  background-color: rgba(34, 139, 34, 0.15);
}  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
