---
import { Image } from 'astro:assets'

interface Sponsor {
  id: string
  name: string
  icon: any
  description: string
  url?: string
  qrImage: any
  qrImages?: any[]
  qrLabels?: string[]
  isCrypto?: boolean
  cryptoWalletIds?: string[]
}

interface Props {
  sponsors: Sponsor[]
}

const { sponsors } = Astro.props
---

<div
  class="custom-scrollbar mx-auto flex w-full max-w-full flex-row gap-2 overflow-x-auto p-2 sm:gap-3 sm:p-3 lg:max-h-[600px] lg:w-full lg:flex-col lg:gap-2 lg:overflow-y-auto lg:p-2"
>
  {
    sponsors.map((sponsor, index) => (
      <button
        class={`sponsor-item group flex shrink-0 cursor-pointer items-center transition-all duration-300 ${
          index === 0
            ? 'active border-[#008b6c] bg-[#008b6c]/10 ring-1 ring-[#008b6c]'
            : 'border-transparent bg-white/5 hover:bg-white/10 dark:bg-white/5 dark:hover:bg-white/10'
        } h-12 w-12 justify-center rounded-full border-2 sm:h-14 sm:w-14 md:h-16 md:w-16 lg:w-full lg:justify-between lg:rounded-xl lg:border lg:p-4 lg:hover:scale-[1.02]`}
        data-id={sponsor.id}
        data-name={sponsor.name}
        data-url={sponsor.url || ''}
        data-has-url={sponsor.url ? 'true' : 'false'}
        data-desc={sponsor.description}
        data-qr-src={sponsor.qrImage.src}
        data-has-multiple={sponsor.qrImages ? 'true' : 'false'}
        data-qr-images={
          sponsor.qrImages ? JSON.stringify(sponsor.qrImages.map((img) => img.src)) : ''
        }
        data-qr-labels={sponsor.qrLabels ? JSON.stringify(sponsor.qrLabels) : ''}
        data-is-crypto={sponsor.isCrypto ? 'true' : 'false'}
        data-wallet-ids={sponsor.cryptoWalletIds ? JSON.stringify(sponsor.cryptoWalletIds) : ''}
        aria-label={`Select ${sponsor.name}`}
      >
        <div class="flex h-full w-full items-center justify-center gap-3 lg:w-auto">
          <div class="flex h-full w-full items-center justify-center overflow-hidden rounded-full bg-white/10 p-0.5 text-xl shadow-sm sm:p-1 lg:h-10 lg:w-10 lg:p-0">
            <Image
              src={sponsor.icon}
              alt={sponsor.name}
              class="h-full w-full rounded-full object-cover"
            />
          </div>
          <span class="hidden font-medium group-[.active]:font-bold group-[.active]:text-[#008b6c] lg:block">
            {sponsor.name}
          </span>
        </div>
        <div class="radio-indicator relative hidden h-5 w-5 items-center justify-center rounded-full border-2 border-gray-400 group-[.active]:border-[#008b6c] group-[.active]:bg-[#008b6c] lg:flex">
          <div class="h-2 w-2 rounded-full bg-white opacity-0 transition-opacity group-[.active]:opacity-100" />
        </div>
      </button>
    ))
  }
  <div class="flex shrink-0 items-center justify-center lg:mt-2 lg:w-full lg:px-2">
    <a
      href="https://www.youtube.com/@gohitx?sub_confirmation=1"
      target="_blank"
      rel="noopener noreferrer"
      class="group flex h-12 w-12 cursor-pointer items-center justify-center rounded-full border border-transparent bg-white/5 transition-all duration-300 hover:bg-white/10 sm:h-14 sm:w-14 md:h-16 md:w-16 lg:w-full lg:rounded-xl lg:border lg:border-transparent lg:bg-white/5 lg:p-4 lg:hover:scale-[1.02] dark:bg-white/5 dark:hover:bg-white/10"
      title="Other..."
    >
      <span class="hidden font-medium lg:block">Other...</span>
      <span class="block text-xl font-bold sm:text-2xl lg:hidden">...</span>
    </a>
  </div>
</div>

<!-- --- --- -- --- -- -- MARK:Styles -->
<style>
  .sponsor-item.active {
    box-shadow: 0 0 15px rgba(0, 139, 108, 0.1);
  }
</style>
