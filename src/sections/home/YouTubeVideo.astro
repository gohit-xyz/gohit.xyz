---
import YoutubeBtn from '@/components/ui/buttons/YoutubeBtn.astro'
---

<section class="flex w-full justify-center pt-2">
  <div class="w-full max-w-3xl">
    <a
      href="https://www.youtube.com/watch?v=SNN2cU8zOEQ"
      target="_blank"
      rel="noopener noreferrer"
      class="group relative block aspect-video overflow-hidden rounded-xl shadow-lg"
    >
      <img
        src="https://img.youtube.com/vi/SNN2cU8zOEQ/maxresdefault.jpg"
        alt="Latest YouTube Video"
        loading="lazy"
        class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
      <!--  -->
      <YoutubeBtn />
      <!--  -->
    </a>
  </div>
</section>
