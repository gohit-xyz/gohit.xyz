---
// prettier-ignore
import { GitHubIcon, InstagramIcon, SoundCloudIcon, TikTokIcon, TwitterIcon, YouTubeIcon } from '@/components/icons/icons.ts';
---

<div class="animate-rise-up flex flex-wrap justify-center gap-6 pt-6">
  <a
    href="https://www.youtube.com/@gohitx?sub_confirmation=1"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="YouTube - gohitx"
    class="social-link"
  >
    <YouTubeIcon className="h-6 w-6" />
  </a>

  <a
    href="https://github.com/gohitx"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="GitHub - gohitx"
    class="social-link"
  >
    <GitHubIcon className="h-6 w-6" />
  </a>

  <a
    href="https://soundcloud.com/gohitx"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="SoundCloud - gohitx"
    class="social-link"
  >
    <SoundCloudIcon className="h-6 w-6" />
  </a>

  <a
    href="https://instagram.com/gohitx"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Instagram - gohitx"
    class="social-link"
  >
    <InstagramIcon className="h-6 w-6" />
  </a>

  <a
    href="https://tiktok.com/@gohitx"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="TikTok - gohitx"
    class="social-link"
  >
    <TikTokIcon className="h-6 w-6" />
  </a>

  <a
    href="https://twitter.com/gohitx"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Twitter - gohitx"
    class="social-link"
  >
    <TwitterIcon className="h-6 w-6" />
  </a>
</div>

<!-- --- --- -- --- -- -- MARK:Styles -->
<style>
  .social-link {
    transition:
      transform 260ms cubic-bezier(0.22, 1, 0.36, 1),
      box-shadow 260ms ease;
    will-change: transform;
  }

  .social-link:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
  }
</style>

