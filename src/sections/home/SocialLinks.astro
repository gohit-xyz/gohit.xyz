---
// prettier-ignore
import { GitHubIcon, InstagramIcon, SoundCloudIcon, TikTokIcon, TwitterIcon, YouTubeIcon } from '@/components/icons/icons.ts';
---

<section class="animate-rise-up flex flex-wrap justify-center gap-3 pt-2 md:gap-4">
  <!-- YouTube Link -->
  <a
    href="https://www.youtube.com/@gohitx?sub_confirmation=1"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="YouTube - gohitx"
    style="--clr: #FF0000;"
    class="social-link h-8 w-8 md:h-10 md:w-10"
  >
    <YouTubeIcon className="h-5 w-5 md:h-6 md:w-6" />
  </a>

  <!-- GitHub Link -->
  <a
    href="https://github.com/gohitx"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="GitHub - gohitx"
    style="--clr: #ffffff;"
    class="social-link h-8 w-8 md:h-10 md:w-10"
  >
    <GitHubIcon className="h-5 w-5 md:h-6 md:w-6" />
  </a>

  <!-- SoundCloud Link -->
  <a
    href="https://soundcloud.com/gohitx"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="SoundCloud - gohitx"
    style="--clr: #FF5500;"
    class="social-link h-8 w-8 md:h-10 md:w-10"
  >
    <SoundCloudIcon className="h-5 w-5 md:h-6 md:w-6" />
  </a>

  <!-- Instagram Link -->
  <a
    href="https://instagram.com/gohitx"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Instagram - gohitx"
    style="--clr: #E4405F;"
    class="social-link h-8 w-8 md:h-10 md:w-10"
  >
    <InstagramIcon className="h-5 w-5 md:h-6 md:w-6" />
  </a>

  <!-- TikTok Link -->
  <a
    href="https://tiktok.com/@gohitx"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="TikTok - gohitx"
    style="--clr: #000000;"
    class="social-link h-8 w-8 md:h-10 md:w-10"
  >
    <TikTokIcon className="h-5 w-5 md:h-6 md:w-6" />
  </a>

  <!-- Twitter Link -->
  <a
    href="https://twitter.com/gohitx"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Twitter - gohitx"
    style="--clr: #1DA1F2;"
    class="social-link h-8 w-8 md:h-10 md:w-10"
  >
    <TwitterIcon className="h-5 w-5 md:h-6 md:w-6" />
  </a>
</section>

<style>
  .social-link {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 15%;
    /* Smooth transition for transform */
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    will-change: transform;
    cursor: pointer;
  }

  .social-link:hover {
    transform: translateY(-6px); /* More pronounced and smooth lift */
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const socialLinks = document.querySelectorAll('.social-link')
    const changingLight = document.querySelector('.changing_light') as HTMLElement
    const defaultLightColor = 'radial-gradient(circle 400px at 50% 300px, #4d4d4d36, transparent)'

    socialLinks.forEach((link) => {
      // Mouse enter event to change the background light
      link.addEventListener('mouseenter', function (this: HTMLElement) {
        const color = this.style.getPropertyValue('--clr')
        if (changingLight && color) {
          changingLight.style.background = `radial-gradient(circle 400px at 50% 300px, ${color}36, transparent)`
        }
      })

      // Mouse leave event to reset the background light
      link.addEventListener('mouseleave', () => {
        if (changingLight) {
          changingLight.style.background = defaultLightColor
        }
      })
    })
  })
</script>
