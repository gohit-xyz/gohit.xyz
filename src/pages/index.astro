---
import Layout from '@/layouts/Layout.astro'
import Footer from '@/sections/shared/Footer.astro'
import { Hero, Projects, SocialLinks, YouTubeVideo } from '@/sections/sections'
---

<Layout>
  <div class="custom-cursor flex min-h-screen w-full items-center justify-center">
    <main class="relative w-full max-w-2xl px-4 py-2 sm:px-6">
      <!--  -->
      <Hero />
      <YouTubeVideo />
      <SocialLinks />
      <Projects />
      <!--  -->
      <Footer />
    </main>
  </div>
</Layout>

<style is:global>
  * {
    scrollbar-width: none;
    scrollbar-color: transparent transparent;
  }

  .custom-cursor {
    cursor: url('/cursors/Pointer.ico'), default;
  }
</style>
