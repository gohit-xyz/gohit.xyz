      <!-- Button Article -->
      <div class="flex justify-end pt-6">
        <NextPageBtn href="/blog" text="More Blog Posts" class="cursor-pointer" />
      </div>
    </main>
  </div>
</Layout>

<style is:global>
  * {
    scrollbar-width: none;
    scrollbar-color: transparent transparent;
  }
