---
import Layout from '@/layouts/Layout.astro'
import meImage from '@/assets/images/me.jpg'
import { TwitterIcon, GitHubIcon, ArrowBackIcon } from '@/components/icons/icons'
---

<Layout>
  <div class="flex min-h-screen w-full items-center justify-center">
    <main class="relative mx-auto w-full max-w-4xl px-6 py-8 sm:px-6">
      <!-- Date -->
      <div class="mb-6 flex items-center gap-2">
        <a href="/">
          <ArrowBackIcon className="opacity-60 hover:opacity-80" />
        </a>
        <div class="text-sm opacity-60">Nov 12th, 2025</div>
      </div>

      <!-- Main title -->
      <h1 class="mb-12 text-4xl font-bold md:text-5xl">
        Gohit X: FrontEnd
