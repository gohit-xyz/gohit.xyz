---
import { getCollection } from 'astro:content'
import Layout from '@/layouts/Layout.astro'

const articles = await getCollection('articles', ({ data }) => {
  return data.draft !== true
})

const sortedArticles = articles.sort((a, b) => {
  return new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
})
---

<Layout>
  <div class="mx-auto max-w-4xl px-4 py-12">
    <h1 class="mb-8 text-4xl font-bold">Art√≠culos</h1>
    
    <div class="grid gap-6">
      {sortedArticles.map((article) => (
        <article class="rounded-lg border border-gray-200 p-6 transition hover:shadow-lg">
          <a href={`/article/${article.slug}`} class="block">
            <h2 class="mb-2 text-2xl font-bold hover:text-blue-600">
              {article.data.title}
            </h2>
            <p class="mb-4 text-gray-600">{article.data.description}</p>
            <div class="flex items-center gap-4 text-sm text-gray-500">
              <time datetime={article.data.publishDate.toString()}>
                {new Date(article.data.publishDate).toLocaleDateString('es-ES', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              {article.data.tags && (
                <div class="flex flex-wrap gap-2">
                  {article.data.tags.map((tag) => (
                    <span class="rounded-full bg-gray-200 px-2 py-1 text-xs">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</Layout>
