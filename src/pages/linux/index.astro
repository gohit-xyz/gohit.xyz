---
import Layout from '@/layouts/Layout.astro'
import Partners from '@/components/plus/Partners.astro'
import BackButtonOne from '@/components/ui/buttons/BackButtonOne.astro'
import { linuxData } from '@/data/linux'
---

<Layout>
  <div class="custom-cursor flex min-h-screen w-full flex-col items-center justify-center">
    <main class="relative w-full max-w-7xl px-4 pt-10 pb-20 sm:px-6">
      <div class="back-button-container">
        <BackButtonOne href="/" text="Home" />
      </div>
      <!-- Hero Section -->
      <div class="hero-section flex flex-col items-center text-center">
        <!-- Badge -->
        <a
          href={linuxData.hero.badge.link}
          class="badge mb-6 inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-medium transition-all duration-300 hover:scale-105"
        >
          <span>{linuxData.hero.badge.text}</span>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
            ></path>
          </svg>
        </a>

        <!-- Main Title -->
        <h1
          class="hero-title mb-6 max-w-4xl text-5xl leading-tight font-bold sm:text-6xl md:text-7xl"
        >
          {linuxData.hero.title}
        </h1>

        <!-- <p class="hero-subtitle mb-10 max-w-2xl text-lg leading-relaxed sm:text-xl">
          {linuxData.hero.subtitle}
        </p> -->

        <!-- CTA Buttons -->
        <div class="mb-15 flex flex-wrap items-center justify-center gap-4">
          <a
            href={linuxData.hero.buttons.getStarted.link}
            class="get-started-btn flex rounded-full px-8 py-3 text-base font-semibold transition-all duration-300 hover:scale-105 hover:shadow-xl"
          >
            {linuxData.hero.buttons.getStarted.text}
            <img class="ml-2 h-6 w-6" src="/src/assets/svg/linux.svg" alt="Linux" />
          </a>

          <!-- <a
            href={linuxData.hero.buttons.sponsor.link}
            class="sponsor-btn rounded-lg border-2 px-8 py-3 text-base font-semibold transition-all duration-300 hover:scale-105"
          >
            {linuxData.hero.buttons.sponsor.text}
          </a> -->
        </div>

        <!-- Subtitle -->
        <p class="hero-subtitle mb-6 max-w-2xl text-lg leading-relaxed sm:text-xl">
          {linuxData.hero.subtitle}
        </p>
        <!-- Code Snippet -->
        <div class="code-container group relative mb-16 w-full max-w-md overflow-hidden rounded-lg">
          <div class="code-header flex items-center justify-between px-4 py-2">
            <span class="text-xs font-medium opacity-70">{linuxData.hero.codeSnippet.label}</span>
            <button
              class="copy-btn flex items-center gap-1 text-xs font-medium opacity-70 transition-opacity hover:opacity-100"
              data-code={linuxData.hero.codeSnippet.command}
            >
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                ></path>
              </svg>
              <span class="copy-text">Copy</span>
            </button>
          </div>
          <div class="code-content px-4 py-3">
            <code class="font-mono text-sm">
              <span class="command-prompt">$ </span>
              <span class="command-text">{linuxData.hero.codeSnippet.command}</span>
            </code>
          </div>
        </div>

        <!-- Partners Component -->
        <div class="mt-15">
          <p class="partners-title mb-8 text-sm font-medium tracking-wider uppercase opacity-60">
            {linuxData.partners.title}
            <a class="text-blue-500 hover:underline" href="/plus">Here</a>
          </p>
          <Partners />
        </div>
      </div>
    </main>
  </div>
</Layout>

<style is:global>
  * {
    scrollbar-width: none;
    scrollbar-color: transparent transparent;
  }

  .custom-cursor {
    cursor: url('/cursors/Pointer.ico'), default;
  }

  /* Hero Section Styles */
  .hero-section {
    position: relative;
  }

  /* Badge Styles */
  .badge {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(168, 85, 247, 0.1));
    border: 1px solid rgba(99, 102, 241, 0.3);
    color: var(--text);
  }

  html.dark .badge {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.15), rgba(168, 85, 247, 0.15));
    border: 1px solid rgba(99, 102, 241, 0.4);
  }

  /* Title with Gradient */
  .hero-title {
    background: linear-gradient(135deg, #6366f1 0%, #a855f7 50%, #ec4899 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 8s ease infinite;
    background-size: 200% 200%;
  }

  @keyframes gradient-shift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Subtitle */
  .hero-subtitle {
    color: var(--text);
    opacity: 0.8;
  }

  /* Get Started Button */
  .get-started-btn {
    background: linear-gradient(135deg, #6366f1, #a855f7);
    color: white;
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
  }

  .get-started-btn:hover {
    box-shadow: 0 15px 40px rgba(99, 102, 241, 0.4);
  }

  /* Sponsor Button */
  .sponsor-btn {
    background: transparent;
    border-color: rgba(99, 102, 241, 0.5);
    color: var(--text);
  }

  .sponsor-btn:hover {
    background: rgba(99, 102, 241, 0.1);
    border-color: rgba(99, 102, 241, 0.8);
  }

  /* Code Container */
  .code-container {
    background: rgba(99, 102, 241, 0.05);
    border: 1px solid rgba(99, 102, 241, 0.2);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .code-container:hover {
    border-color: rgba(99, 102, 241, 0.4);
    box-shadow: 0 8px 24px rgba(99, 102, 241, 0.15);
  }

  html.dark .code-container {
    background: rgba(99, 102, 241, 0.08);
    border: 1px solid rgba(99, 102, 241, 0.3);
  }

  html.dark .code-container:hover {
    border-color: rgba(99, 102, 241, 0.5);
    box-shadow: 0 8px 24px rgba(99, 102, 241, 0.2);
  }

  .code-header {
    border-bottom: 1px solid rgba(99, 102, 241, 0.15);
  }

  .code-content {
    color: var(--text);
  }

  .command-prompt {
    opacity: 0.5;
  }

  .command-text {
    color: #6366f1;
    font-weight: 600;
  }

  html.dark .command-text {
    color: #a855f7;
  }

  .copy-btn {
    cursor: pointer;
    background: none;
    border: none;
    color: var(--text);
  }

  /* Back Button Container */
  .back-button-container {
    display: flex;
    justify-content: center;
    width: 100%;
    /* margin-bottom: 2rem; */
  }

  /* Partners Title */
  .partners-title {
    color: var(--text);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .get-started-btn,
    .sponsor-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>

<script>
  // Copy to clipboard functionality
  document.addEventListener('DOMContentLoaded', () => {
    const copyBtn = document.querySelector('.copy-btn') as HTMLButtonElement
    const copyText = copyBtn?.querySelector('.copy-text')

    if (copyBtn && copyText) {
      copyBtn.addEventListener('click', async () => {
        const code = copyBtn.getAttribute('data-code')
        if (code) {
          try {
            await navigator.clipboard.writeText(code)
            copyText.textContent = 'Copied!'
            setTimeout(() => {
              copyText.textContent = 'Copy'
            }, 2000)
          } catch (err) {
            console.error('Failed to copy:', err)
          }
        }
      })
    }
  })
</script>
